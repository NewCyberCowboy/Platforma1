@model Platforma.Models.Listing

@{
    ViewData["Title"] = "Добавить объявление";
}

<h1>Добавить объявление</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Название</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Цена</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LocationId">Город</label>
        <select asp-for="LocationId" asp-items="ViewBag.Locations" class="form-control"></select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

